---
// Composant Header pour le site TaVue
---

<header class="bg-white shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
     
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold text-gray-900">
          TaVue
        </a>
      </div>

      
      <div class="hidden md:flex items-center space-x-50">
        <a 
          href="/personnaliser" 
          class="text-gray-700 hover:text-gray-900 transition-colors duration-200 font-medium"
        >
          Personnaliser
        </a>
        <a 
          href="/gallery/collection" 
          class="text-gray-700 hover:text-gray-900 transition-colors duration-200 font-medium"
        >
          Ma Collection
        </a>
      </div>

     
      <div class="flex items-center gap-4">
        <!-- Bouton utilisateur (visible si connecté) -->
        <div id="user-menu" class="hidden items-center gap-2">
          <span id="user-name" class="text-sm text-gray-700 hidden md:block"></span>
          <button 
            id="logout-btn"
            class="px-4 py-2 text-sm font-medium text-white bg-red-500 hover:bg-red-600 rounded-lg transition-colors"
          >
            Se déconnecter
          </button>
        </div>

        <!-- Bouton connexion (visible si non connecté) -->
        <a 
          id="login-link"
          href="/connexion" 
          class="text-gray-700 hover:text-gray-900 transition-colors duration-200"
          aria-label="Connexion utilisateur"
        >
          <svg 
            class="w-6 h-6" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24" 
            xmlns="http://www.w3.org/2000/svg"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
            />
          </svg>
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button 
          type="button" 
          class="text-gray-700 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-gray-500"
          aria-label="Menu mobile"
          id="mobile-menu-button"
        >
          <svg 
            class="w-6 h-6" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
          >
            <path 
              stroke-linecap="round" 
              stroke-linejoin="round" 
              stroke-width="2" 
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a 
          href="/personnaliser" 
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50"
        >
          Personnaliser
        </a>
        <a 
          href="/gallery/collection" 
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50"
        >
          Ma Collection
        </a>
        <!-- Bouton déconnexion mobile (visible si connecté) -->
        <button 
          id="logout-btn-mobile"
          class="hidden w-full text-left px-3 py-2 rounded-md text-base font-medium text-red-600 hover:text-red-700 hover:bg-red-50"
        >
          Se déconnecter
        </button>
      </div>
    </div>
  </nav>
</header>

<script>
  // Toggle mobile menu
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }

  // Gestion de l'authentification
  function checkAuth() {
    const authData = localStorage.getItem('pocketbase_auth');
    const userMenu = document.getElementById('user-menu');
    const loginLink = document.getElementById('login-link');
    const userName = document.getElementById('user-name');
    const logoutBtnMobile = document.getElementById('logout-btn-mobile');

    if (authData) {
      try {
        const auth = JSON.parse(authData);
        
        // Afficher le menu utilisateur
        if (userMenu) {
          userMenu.classList.remove('hidden');
          userMenu.classList.add('flex');
        }
        
        // Cacher le lien de connexion
        if (loginLink) {
          loginLink.classList.add('hidden');
        }

        // Afficher le bouton déconnexion mobile
        if (logoutBtnMobile) {
          logoutBtnMobile.classList.remove('hidden');
        }
        
        // Afficher le nom de l'utilisateur
        if (userName && auth.record?.name) {
          userName.textContent = auth.record.name;
        }
      } catch (e) {
        console.error('Erreur lors de la lecture des données d\'authentification:', e);
      }
    }
  }

  // Fonction de déconnexion
  function logout() {
    // Supprimer de localStorage
    localStorage.removeItem('pocketbase_auth');
    
    // Rediriger vers la page de connexion
    window.location.href = '/connexion';
  }

  // Écouteurs d'événements pour les boutons de déconnexion
  const logoutBtn = document.getElementById('logout-btn');
  const logoutBtnMobile = document.getElementById('logout-btn-mobile');

  if (logoutBtn) {
    logoutBtn.addEventListener('click', logout);
  }

  if (logoutBtnMobile) {
    logoutBtnMobile.addEventListener('click', logout);
  }

  // Vérifier l'authentification au chargement
  checkAuth();
</script>

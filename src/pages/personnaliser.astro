---
import Layout from '../layouts/Layout.astro';
import Materiaux from '../components/Materiaux.astro';
import Couleurs from '../components/Couleurs.astro';
import Pont from '../components/Pont.astro';
import Taille from '../components/Taille.astro';

// Récupérer l'ID si on est en mode édition
const url = new URL(Astro.request.url);
const editId = url.searchParams.get('id');

// Si on est en mode édition, récupérer les données de la lunette
let existingLunette = null;
if (editId) {
	try {
		const response = await fetch(`http://127.0.0.1:8090/api/collections/lunettes/records/${editId}`);
		if (response.ok) {
			existingLunette = await response.json();
		}
	} catch (error) {
		console.error('Erreur lors de la récupération de la lunette:', error);
	}
}

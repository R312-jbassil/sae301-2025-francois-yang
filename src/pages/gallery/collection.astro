---
import Layout from "../../layouts/Layout.astro";

// Récupérer les lunettes depuis PocketBase
let lunettesCollection: any[] = [];

try {
    const response = await fetch('http://127.0.0.1:8090/api/collections/lunettes/records');
    if (response.ok) {
        const data = await response.json();
        lunettesCollection = data.items || [];
    }
} catch (error) {
    console.error('Erreur lors de la récupération des lunettes:', error);
}
---

<Layout title="TaVue - Ma Collection">
    <div class="min-h-screen bg-gray-50">
        <!-- Bandeau de statistiques communautaire -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-8">
            <div
                class="bg-cyan-400/10 border-2 border-cyan-300 rounded-xl px-6 py-4 mb-8 flex items-center justify-between"
            >
                <div class="flex items-center gap-3">
                    <div
                        class="w-10 h-10 bg-cyan-400 rounded-full flex items-center justify-center shrink-0"
                    >
                        <svg
                            class="w-5 h-5 text-white"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <p class="text-sm text-gray-800">
                            <span>Déjà</span>
                            <span class="font-bold text-black"
                                >3 000 créations</span
                            >
                            <span>enregistrées dans Ma Collection</span>
                        </p>
                        <p class="text-xs text-gray-600">
                            Et si la vôtre devenait iconique ?
                        </p>
                    </div>
                </div>
                <div
                    class="px-4 py-2 bg-secondary text-white text-sm font-medium rounded-md"
                >
                    Communauté TaVue
                </div>
            </div>
        </div>

        <!-- Contenu principal -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
            <!-- En-tête -->
            <div class="flex items-start justify-between mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-black mb-1">
                        Ma Collection
                    </h1>
                    <p class="text-gray-600 text-sm">
                        Commencez à créer vos lunettes personnalisées
                    </p>
                </div>
                <a
                    href="/personnaliser"
                    class="px-4 py-2 bg-cyan-400 hover:bg-cyan-500 text-white font-medium rounded-lg transition-colors flex items-center gap-2"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 4v16m8-8H4"></path>
                    </svg>
                    Nouvelle création
                </a>
            </div>

            <!-- État vide ou grille -->
            {lunettesCollection.length === 0 ? (
                <div class="bg-white rounded-xl shadow-sm p-20 text-center">
                    <div class="max-w-xl mx-auto">
                        <!-- Icône + -->
                        <div
                            class="w-20 h-20 bg-cyan-100 rounded-full flex items-center justify-center mx-auto mb-6"
                        >
                            <svg
                                class="w-10 h-10 text-cyan-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 4v16m8-8H4"></path>
                            </svg>
                        </div>

                        <h2 class="text-xl font-semibold text-black mb-3">
                            Aucune création pour le moment
                        </h2>
                        <p class="text-gray-600 text-sm mb-8 leading-relaxed">
                            Commencez à personnaliser vos lunettes et retrouvez<br
                            />
                            toutes vos créations ici.
                        </p>

                        <a
                            href="/personnaliser"
                            class="inline-block px-6 py-3 bg-cyan-400 hover:bg-cyan-500 text-white font-medium rounded-lg transition-colors"
                        >
                            Créer mes premières lunettes
                        </a>
                    </div>
                </div>
            ) : (
                <!-- Grille de lunettes -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {lunettesCollection.map((lunette: any) => (
                        <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow overflow-hidden">
                            <!-- Prévisualisation - Cliquable pour voir le détail -->
                            <a href={`/gallery/${lunette.id}`} class="bg-linear-to-br from-cyan-50 to-blue-50 p-8 flex items-center justify-center min-h-[200px] hover:from-cyan-100 hover:to-blue-100 transition-colors">
                                {lunette.code_svg ? (
                                    <div class="w-full h-auto max-w-xs" set:html={lunette.code_svg}></div>
                                ) : (
                                    <img src="/lunettes.svg" alt="Lunettes personnalisées" class="w-full h-auto max-w-xs" />
                                )}
                            </a>
                            
                            <!-- Informations -->
                            <div class="p-6">
                                <div class="flex items-start justify-between mb-4">
                                    <div>
                                        <a href={`/gallery/${lunette.id}`} class="hover:text-cyan-600 transition-colors">
                                            <h3 class="font-semibold text-black text-lg mb-1">
                                                {lunette.nom_creation || lunette.forme || 'Ma création'}
                                            </h3>
                                        </a>
                                        <p class="text-sm text-gray-600">
                                            Créée le {new Date(lunette.created).toLocaleDateString('fr-FR')}
                                        </p>
                                    </div>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-cyan-100 text-cyan-800">
                                        {lunette.mode_creation || 'Personnalisée'}
                                    </span>
                                </div>

                                <!-- Détails -->
                                <div class="space-y-2 mb-4 text-sm">
                                    <div class="flex items-center gap-2">
                                        <span class="text-gray-500">Forme:</span>
                                        <span class="text-gray-800 font-medium">{lunette.forme || 'Non spécifié'}</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="text-gray-500">Verres:</span>
                                        <span class="text-gray-800 font-medium">{lunette.type_verre || 'Non spécifié'}</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="text-gray-500">Matériau:</span>
                                        <span class="text-gray-800 font-medium">{lunette.type_monture || 'Non spécifié'}</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="text-gray-500">Taille:</span>
                                        <span class="text-gray-800 font-medium">{lunette.taille ? `${lunette.taille}mm` : 'Non spécifié'}</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <span class="text-gray-500">Couleurs:</span>
                                        <div class="flex gap-1">
                                            {lunette.couleur_monture && (
                                                <div class="w-5 h-5 rounded-full border border-gray-300" style={`background-color: ${lunette.couleur_monture}`}></div>
                                            )}
                                            {lunette.couleur_branches && (
                                                <div class="w-5 h-5 rounded-full border border-gray-300" style={`background-color: ${lunette.couleur_branches}`}></div>
                                            )}
                                        </div>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="flex flex-col gap-2">
                                    <a
                                        href={`/gallery/${lunette.id}`}
                                        class="w-full px-4 py-2 bg-cyan-400 hover:bg-cyan-500 text-white text-sm font-medium rounded-lg transition-colors text-center"
                                    >
                                        Voir le détail
                                    </a>
                                    <div class="flex gap-2">
                                        <a
                                            href={`/personnaliser?id=${lunette.id}`}
                                            class="flex-1 px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-medium rounded-lg transition-colors text-center"
                                        >
                                            Modifier
                                        </a>
                                        <button
                                            class="px-3 py-2 bg-red-100 hover:bg-red-200 text-red-600 text-sm font-medium rounded-lg transition-colors delete-btn"
                                            data-id={lunette.id}
                                            data-nom={lunette.nom_creation || 'cette création'}
                                            title="Supprimer"
                                    >
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                        </svg>
                                    </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    ))}
                </div>
            )}
        </div>
    </div>
</Layout>

<script>
    // Gestion de la suppression
    document.addEventListener('DOMContentLoaded', () => {
        const deleteButtons = document.querySelectorAll('.delete-btn');
        
        deleteButtons.forEach(button => {
            button.addEventListener('click', async () => {
                const id = button.getAttribute('data-id');
                const nom = button.getAttribute('data-nom');
                
                // Confirmation
                const confirmation = confirm(`Êtes-vous sûr de vouloir supprimer "${nom}" ?\n\nCette action est irréversible.`);
                
                if (!confirmation) {
                    return;
                }
                
                try {
                    const response = await fetch(`http://127.0.0.1:8090/api/collections/lunettes/records/${id}`, {
                        method: 'DELETE',
                    });
                    
                    if (response.ok || response.status === 204) {
                        console.log('Lunette supprimée avec succès');
                        // Recharger la page pour mettre à jour la liste
                        window.location.reload();
                    } else {
                        const error = await response.json();
                        console.error('Erreur lors de la suppression:', error);
                        alert('Erreur lors de la suppression. Vérifiez les permissions dans PocketBase.');
                    }
                } catch (error) {
                    console.error('Erreur réseau:', error);
                    alert('Erreur de connexion. Assurez-vous que PocketBase est démarré.');
                }
            });
        });
    });
</script>
